{
    "name": "pamiq-io",
    "build": {
      "context": "../",
      "dockerfile": "./Dockerfile"
    },
    "workspaceMount": "source=pamiq-io,target=/workspace,type=volume",
    "workspaceFolder": "/workspace",
    "mounts": [
      "source=uv-cache,target=/root/.cache/uv,type=volume",
      "source=pip-cache,target=/root/.cache/pip,type=volume",
      "source=pre-commit-cache,target=/root/.cache/pre-commit,type=volume",
      "source=${XDG_RUNTIME_DIR}/pulse/native,target=${XDG_RUNTIME_DIR}/pulse/native,type=bind",
      "source=${HOME}/.config/pulse/cookie,target=/root/.config/pulse/cookie,type=bind"
    ],
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "tamasfe.even-better-toml",
          "ms-azuretools.vscode-docker",
          "github.vscode-github-actions"
        ]
      }
    },
    "containerEnv": {
      "PYRIGHT_PYTHON_FORCE_VERSION": "latest",
      "PULSE_SERVER": "unix:${XDG_RUNTIME_DIR}/pulse/native",
      "PULSE_COOKIE": "/root/.config/pulse/cookie"
    },
    "shutdownAction": "stopContainer",
    "privileged": true
}
